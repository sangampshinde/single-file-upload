<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>single-file-upload</title>
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #f8f9fa; /* Light background color */
      }

      h1 {
        color: #343a40; /* Darker text color for the title */

        font-weight: bold;
      }

      h2 {
        color: #495057; /* Slightly lighter color for subtitles */
      }

      .table {
        border-radius: 0.5rem; /* Rounded corners for the table */
        overflow: hidden; /* Prevents overflow of rounded corners */
      }

      .table{
        width: 55%;
      }

      .table th {
        background-color: #007bff; /* Bootstrap primary color for header */
        color: white; /* White text for header */
      }

      .table-striped tbody tr:nth-of-type(odd) {
        background-color: #e9ecef; /* Light gray for odd rows */
      }

      .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Light gray on hover */
      }

      .btn-primary {
        background-color: #007bff; /* Bootstrap primary color */

        border-color: #007bff; /* Border color */
      }

      .btn-danger {
        background-color: #dc3545; /* Bootstrap danger color */

        border-color: #dc3545; /* Border color */
      }

      .btn-danger:hover {
        background-color: #c82333; /* Darker red on hover */

        border-color: #bd2130; /* Darker border on hover */
      }
    </style>
  </head>
  <body>
    <div class="container m-5">
      <center>
        <h1 class="mb-4">File Storage App</h1>

        <form
          action="/uploads"
          method="POST"
          enctype="multipart/form-data"
          class="mb-4"
        >
          <div class="form-group">
            <input type="file" name="file" class="form-control-file" required />
          </div>

          <button type="submit" class="btn btn-primary m-3">Upload</button>
        </form>

        <h2 class="mt-5">Uploaded Files</h2>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">File Name</th>

                <th scope="col">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% files.forEach((file) => { %>

              <tr>
                <td>
                  <a href="/uploads/<%= file %>" target="_blank"><%= file %></a>
                </td>

                <td>
                  <form action="/delete" method="POST" class="d-inline">
                    <input type="hidden" name="filename" value="<%= file %>" />

                    <button type="submit" class="btn btn-danger btn-sm">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>

              <% }) %>
            </tbody>
          </table>
        </div>
      </center>
    </div>
  </body>
</html>
